# UPAK Backend Environment Configuration
# Скопируйте этот файл как .env и заполните необходимые значения

# === ОСНОВНЫЕ НАСТРОЙКИ ===
DEBUG=false
ENVIRONMENT=production

# === БЕЗОПАСНОСТЬ ===
# Секретный ключ для HMAC валидации webhook'ов от ЮКассы
YOOKASSA_WEBHOOK_SECRET=your_yookassa_webhook_secret_here

# Секретные ключи для JWT и других операций
SECRET_KEY=your_super_secret_key_here
API_SECRET_KEY=your_api_secret_key_here

# === YOOKASSA НАСТРОЙКИ ===
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_yookassa_secret_key

# === TELEGRAM BOT ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id

# === REDIS НАСТРОЙКИ ===
# Для защиты от replay атак и кэширования
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# Время жизни записей в Redis (секунды)
REDIS_TTL=300

# === БАЗА ДАННЫХ ===
DATABASE_URL=your_database_url_here

# === GOOGLE SERVICES ===
GOOGLE_SHEETS_CREDENTIALS_PATH=path/to/credentials.json
GOOGLE_SHEET_ID=your_google_sheet_id

# === OPENAI ===
OPENAI_API_KEY=your_openai_api_key

# === FIREBASE ===
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json

# === RATE LIMITING ===
# Глобальные лимиты (запросов в минуту)
GLOBAL_RATE_LIMIT=100
PAYMENT_RATE_LIMIT=10
ORDER_RATE_LIMIT=5
WEBHOOK_RATE_LIMIT=50
HEALTH_RATE_LIMIT=10

# === ЛОГИРОВАНИЕ ===
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/upak.log

# === CORS НАСТРОЙКИ ===
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# === ФАЙЛЫ И ЗАГРУЗКИ ===
MAX_FILE_SIZE=10485760  # 10MB в байтах
UPLOAD_PATH=uploads/
STATIC_PATH=static/

# === МОНИТОРИНГ ===
ENABLE_METRICS=true
METRICS_PORT=8001